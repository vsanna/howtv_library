<div class="list book-history">
  <div class="mdl-grid list-header mdl-cell--hide-tablet mdl-cell--hide-phone">
    <div class="mdl-cell mdl-cell--8-col">タイトル</div>
    <div class="mdl-cell mdl-cell--2-col">借りた日</div>
    <div class="mdl-cell mdl-cell--2-col">返却日</div>
  </div>
  <div class="list-body">
    <% @my_renting_books.each do |r| %>
      <div class="list-item mdl-grid">
        <div class="mdl-cell mdl-cell--8-col mdl-cell--8-col-tablet mdl-cell--4-col-phone">
          <span class="list-item--label mdl-cell--hide-desktop">タイトル</span>
          <span class="list-item--text"><%= r.book.title %></span>
        </div>
        <div class="mdl-cell mdl-cell--2-col mdl-cell--8-col-tablet mdl-cell--4-col-phone">
          <span class="list-item--label mdl-cell--hide-desktop">借りた日</span>
          <span class="list-item--text"><%= r.start_at.strftime("%Y.%m.%d") %></span>
        </div>
        <div class="mdl-cell mdl-cell--2-col mdl-cell--8-col-tablet mdl-cell--4-col-phone">
          <span class="list-item--label mdl-cell--hide-desktop">返却日</span>
          <span class="list-item--text"><%= r.end_at.strftime("%Y.%m.%d") %><%= calc_rent_days r %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>
