<div class="container">
  <div class="login-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.email_field :email, autofocus: true, class:"mdl-textfield__input", id:'email' %>
        <label class="mdl-textfield__label" for="email">メールアドレス</label>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.password_field :password, autocomplete: "off", class:"mdl-textfield__input", id:'password' %>
        <label class="mdl-textfield__label" for="password">パスワード</label>
      </div>
      <% if devise_mapping.rememberable? -%>
        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="remember">
          <%= f.check_box :remember_me, class:"mdl-checkbox__input", checked:true %>
          <span class="mdl-checkbox__label">ログインしたままにする</span>
        </label>
      <% end -%>

      <%= f.submit "ログイン", class:"mdl-button submit" %>
    <% end %>
  </div>
</div>


